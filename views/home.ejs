<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/4473696c92.js" crossorigin="anonymous"></script>
        <!-- our css should be below all the other files to override them -->
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <div id = "body-content">
            <h1 id="page-heading">
                <i class="fa-solid fa-address-book"></i>            
                My Contacts List
            </h1>
    
            <ul id = "unordered-list">
                <% for(let i of contact_list){ %>
                    <li class = "list-items">
                        <div class = "details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p>
                        </div>
                        <div class="delete-button">
                            <a href="/delete-contact/?id=<%= i._id%>">
                                <i class="fa-solid fa-trash" style="color: #ff0000;"></i>
                            </a>
                        </div>
                    </li>
                <% } %>
            </ul>
        
            <form action="/create-contact" method="POST" id="form-elements">
                <input type="text" name="name" placeholder="Enter Name">
                <input type="number" name="phone" placeholder="Enter Phone">

                <button type="submit">Add Contact</button>
            </form>    
        </div>
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>